# The snippets below help you quickly generate .json models for CraftCMS.
#
# They work really well with the CMS-Generator plugin, available at
# http://github.com/Pennebaker/craftcms-generator


".source.json":
  Assets:
    prefix: "CraftAssets"
    body: '''
      {
        "group": "$1",
        "name": "$2",
        "handle": "$3",
        "instructions": "$4",
        "type": "Assets",
        "typesettings": {
          "useSingleFolder": false,
          "sources": ["$5"],
          "defaultUploadLocationSubpath": "",
          "restrictFiles": true,
          "allowedKinds": [$6
            "access",
            "audio",
            "compressed",
            "excel",
            "flash",
            "html",
            "illustrator",
            "image",
            "javascript",
            "json",
            "pdf",
            "photoshop",
            "php",
            "powerpoint",
            "text",
            "video",
            "word",
            "xml"
          ],
          "limit":$7 3,
          "viewMode": "$8",
          "selectionLabel": "$9"
        }
      },
    '''
  Categories:
    prefix: "CraftCategories"
    body: '''
      {
        "group": "$1",
        "name": "$2",
        "handle": "$3",
        "instructions": "$4",
        "type": "Categories",
        "typesettings": {
          "source": ["$5"],
          "useSingleFolder": false,
          "limit": 3,
          "selectionLabel": ""
        }
      },
    '''
  Checkboxes:
